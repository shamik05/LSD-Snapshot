{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error","double"],
        "no-restricted-globals": ["off", "isNan"],
        "no-console": "off",
        "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTaggedTemplates": true, "allowTernary": true}],
        "func-names": ["error", "never"],
        "no-restricted-syntax": ["error", "1"]
    }
}
